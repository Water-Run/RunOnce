<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="RunOnce.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="RunOnce">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 自定义标题栏 -->
        <Grid x:Name="AppTitleBar" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 返回按钮 -->
            <Button 
                x:Name="BackButton"
                Grid.Column="0"
                Style="{ThemeResource SubtleButtonStyle}"
                Width="48"
                Height="48"
                Visibility="Collapsed"
                Click="BackButton_Click">
                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE72B;" FontSize="14"/>
            </Button>

            <!-- 标题文本 -->
            <TextBlock 
                x:Name="AppTitleTextBlock"
                Grid.Column="1"
                Style="{ThemeResource CaptionTextBlockStyle}"
                VerticalAlignment="Center"
                Margin="16,0,0,0"/>

            <!-- 设置按钮 -->
            <Button 
                x:Name="SettingsButton"
                Grid.Column="2"
                Style="{ThemeResource SubtleButtonStyle}"
                Width="48"
                Height="48"
                Margin="0,0,138,0"
                Click="SettingsButton_Click">
                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE713;" FontSize="14"/>
            </Button>
        </Grid>

        <!-- 内容区域 -->
        <Frame 
            x:Name="ContentFrame" 
            Grid.Row="1"
            IsNavigationStackEnabled="True"/>
    </Grid>
</Window>